<div data-role="page" data-url="<%= Rho::Application.startURI %>/">
  

    <div id="principal" class="card-panel teal lighten-2" style="width: 100%; height: 100%;"> 

      <div class="row">

        <div class="col s12">

          <div id="content" class="center-align card-panel grey darken-3">

         
            

            <div class="row">

              <div id="resultado" class="card blue-grey darken-1 hide">             

                <div class="card-content white-text">

                  <span id="conteudo_input"></span> 

                  <br>

                </div>

              </div>

            </div>

            

            <div class="row" id="depois_de_apertar_o_botao_me_apague_na_moral"> 

              <div class="input-field col s12">

                <i class="material-icons prefix"></i>

                <input id="pegue_esse_texto_de_boa" type="text" style="color:white;">

                <label for="texto">Digite um texto</label>

              </div>  

              

              <button class="btn waves-effect waves-light" type="submit" onclick="pega_texto_e_apaga_div()">Clique aqui!

                <i class="material-icons right">send</i>

              </button>

            </div>

          </div>

        </div>  

      </div>

    </div>

    

    <script type="text/javascript">

      function pega_texto_e_apaga_div() {

        document.getElementById('conteudo_input').innerHTML = document.getElementById('pegue_esse_texto_de_boa').value;

        document.getElementById('resultado').classList.remove('hide');

        document.getElementById('depois_de_apertar_o_botao_me_apague_na_moral').innerHTML = "";

      }

    </script>

